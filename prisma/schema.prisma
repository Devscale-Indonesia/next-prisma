generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// One-to-Many
model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String

  post Post[]
}

model Post {
  id String @id @default(cuid())
  title String
  content String
  category String?
  userId String
  user User @relation(fields: [userId], references: [id])
}